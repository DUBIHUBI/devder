<div class="profile-banner">
  <%= image_tag('gradient_use') %>
  <div class="profile-picture">
    <%= image_tag current_user.image_url %>
  </div>
</div>


<div class="container">

  <ul class="nav nav-pills mb-3 mt-3 justify-content-center" id="pills-tab" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Me</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Meetings</button>
    </li>
  </ul>
  <div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab" tabindex="0">

      <div class="container">
        <div class="row">
          <div class="col"></div>
          <div class="col-6 profile-info">
            <div class="row text-center">
              <h1><%= current_user.first_name.upcase %></h1>
              <h1><%= current_user.last_name.upcase %></h1>
            </div>
          </div>
        <div class="col"></div>
      </div>

    </div>

    </div>

    <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab" tabindex="0">

      <div class="container my-profile">
        <div data-controller="meeting-movement">
          <%= render partial: "shared/meetings"%>
        </div>
      </div>

    </div>
  </div>






</div>
