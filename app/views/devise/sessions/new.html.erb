
<style>
  body{
    background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)),url('https://visionsandvoices.usc.edu/wp-content/uploads/2022/06/Homepage_Background_3000x1200.png');

  }
</style>



<body>
<div class="container py-5">
  <div class="row justify-content-center  ">
    <div class="col-4 mask-custom px-5 ">
      <h2 class="text-center mt-5">Log in</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
          data: {turbo: false}) do |f| %>

          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
          </div>

          <div class="form-inputs">
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
          </div>

          <div class="form-inputs">
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions ">
            <%= f.button :submit, "Log in", class: "form-btn" %>
          </div>
        <% end %>

          <div class="devise-link mt-3">
            <%= render "devise/shared/links" %>
          </div>


    </div>
  </div>

</div>
</body>
