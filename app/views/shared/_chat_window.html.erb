<div class="row justify-content-center">
          <div class="col-auto">
            <button type="button" class="btn btn-primary"  data-bs-toggle="modal" data-bs-target="#createchat">
              Chat
            </button>

            <div class="modal fade" id="createchat" tabindex="-1" aria-labelledby="createchatLabel" aria-hidden="true">
              <div class="modal-dialog text-black">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="createchatLabel"><%= "Chat with #{@user.first_name} " %></h5>
                  </div>
                  <div class="modal-body">


                    <% @chatroom.messages.each do |message| %>
                      <p><%= message.content %></p>
                    <% end %>


                    <%= simple_form_for [@chatroom, @message],

                        html: {class: "d-flex"} do |f|
                      %>
                        <%= f.input :content,
                          label: false,
                          wrapper_html: {class: "flex-grow-1"}
                        %>
                        <%= f.submit "Send", class: "btn btn-primary mb-3" %>
                      <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
