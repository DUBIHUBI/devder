
<% test = defined?(user_is_reciever) || current_user.id != message.user.id %>
<div class="big-box-<%= test ? "2" : "1" %>">

  <div class="message-box-<%= test ? "2" : "1" %>">

    <small>
      <i><%= message.created_at.in_time_zone('London').strftime("%b %e at %l:%M %p") %></i><br>
      <strong><%= "#{message.user.first_name}: " %></strong>

    </small>
      <%= message.content %>
  </div>

</div>
