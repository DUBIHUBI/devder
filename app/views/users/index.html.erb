<div class="p-5">
  <div class="row text-center mb-4"><h1>Results</h1></div>
  <div class="row">
    <div class="col-sm-12 col-md-4 col-lg-3">
      <div class="filter p-4">
        <h2 class="text-center my-3">Search</h2>
        <div class="search-bar">

          <%= form_tag users_path, method: :get do %>

            <div class="filter-content">
              <%= text_field_tag :query,
                params[:query],
                class: "form-control search-input",
                placeholder: "Search..." %>
            </div>

            <div class="filter-label">Company type:</div>

            <div class="filter-content">
              <%= select_tag :company_type,
                options_for_select((User.company_types.sort), params[:company_type]),
              class: "form-control search-input",
                include_blank: "Select company type" %>
            </div>

            <div class="filter-label">Funding stage:</div>

            <div class="filter-content">
              <%= select_tag :funding_stage,
                options_for_select((User.funding_stages.sort), params[:funding_stage]),
              class: "form-control search-input",
                include_blank: "Select funding stage" %>
            </div>

            <div class="filter-label">Role:</div>

            <div class="filter-content">
              <%= select_tag :role,
                options_for_select((User.roles.sort), params[:role]),
              class: "form-control search-input",
                include_blank: "Select role" %>
            </div>

            <%# <div class="filter-label">Gender:</div> %>

            <%# <div class="filter-content"> %>
              <%# <%= radio_button_tag :gender, "male", params[:gender]%>
              <%# <%= label_tag "gender_Male", "male" %>
              <%# <%= radio_button_tag :gender, "female", params[:gender]%>
              <%# <%= label_tag "gender_Female", "female" %>
            <%# </div> %>

            <div class="text-center my-4">
              <%= submit_tag "Search", class: "btn-purple-sm" %>
            </div>

          <% end %>
        </div>
        <div>
          <p class="result-count text-center my-0">Showing <%= @users.count %> out of <%= User.where(student: false).count %> results</p>
        </div>
      </div>
    </div>
    <div class="cards col-sm-12 col-md-8 col-lg-9">
    <% @users.each do |user| %>
      <%= render 'users/card', user: user %>
    <% end %>
    </div>
  </div>
